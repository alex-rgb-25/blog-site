<% include partial/header %>


<div class="ui main text container">
    <div class = "ui huge header">
        <div class="ui top attached segment">
          <div class="ui divided items">
                <h1>RESTful Blog</h1>
                <% blogs.forEach(function(blog){ %>

                    <div class = "item">
                        <div class="image">
                            <img src="<%=blog.image%>">
                        </div>
                        <div class="content">
                            <a class ="header" href="/blogs/<%= blog.id%>"><%=blog.title%></a>
                            <div class ="meta">
                                    <span><%= blog.created.toDateString()%></span>
                            </div>
                            <div class="description">
                                <!--substring to show only the first 101 chars-->
                                 <p><%=blog.body.substring(0,100)%>...</p>

                            </div>

                            <div class = "extra">

                                    <a class = "ui floated basic violet button" href="/blogs/<%= blog.id%>">Continue Reading
                                    <i class ="right chevron icon"></i>
                                    </a>
                            </div>
                        </div>
    
                
                    </div>
                
                <%})%>
            </div>
        </div>
     </div>
</div>





    <% include partial/footer %>